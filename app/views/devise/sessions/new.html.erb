<main class="v-layout-content flex-shrink-0 ant-layout-content">
    <div class="ant-row">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5 my-8">
                
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                <div class="el-card is-always-shadow card_39334a8">
                    <!---->
                    <div class="el-card__body">
                        <div class="my-4 text-center">
                            <h5>Login</h5>
                        </div>
                        <div class="login-form">
                            <!---->
                            <div class="el-form">
                                <div class="el-form-item is-required el-form-item--medium">
                                    <!---->
                                    <div class="el-form-item__content">
                                        <div class="el-input el-input--medium el-input-group el-input-group--prepend">
                                            <div class="el-input-group__prepend"><i aria-hidden="true" class="fa fa-user"></i></div>
                                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "el-input__inner", placeholder: "Username or email" %>
                                            <!---->
                                            <!---->
                                            <!---->
                                            <!---->
                                        </div>
                                        <!---->
                                    </div>
                                </div>
                                <div class="el-form-item is-required el-form-item--medium">
                                    <!---->
                                    <div class="el-form-item__content">
                                        <div class="el-input el-input--medium el-input-group el-input-group--prepend">
                                            <div class="el-input-group__prepend"><i aria-hidden="true" class="fa fa-lock"></i></div>
                                            <%= f.password_field :password, autocomplete: "current-password", class: "el-input__inner", placeholder: "Password" %>
                                            <!---->
                                            <!---->
                                            <!---->
                                            <!---->
                                        </div>
                                        <!---->
                                    </div>
                                </div>
                            </div>
                            <% if devise_mapping.rememberable? %>
                            <div class="field">
                                <small>
                                <%= f.check_box :remember_me %>
                                <%= f.label :remember_me %>
                                </small>
                            </div>
                            <% end %>
                            <%= f.submit "Login", class: "el-button w-100 el-button--primary" %>
                
                            <div class="d-flex justify-content-between my-2">
                              <a href="/forgot-password" class=""><small>Forgot your password?</small></a> 
                              <%= link_to new_user_registration_path, class: "" do %>
                                <small>Create account</small>
                              <% end %>
                            </div>
                            <div class="d-flex align-items-center justify-content-between my-4">
                                <hr class="flex-fill m-0"> <span class="mx-3">
                                    Or login with
                                </span>
                                <hr class="flex-fill m-0">
                            </div>
                            <div class="social-login">
                                <ul class="list-unstyled d-flex align-items-center justify-content-between flex-wrap mb-0"><button type="button" class="el-button social-login__button facebook el-button--default el-button--medium">
                                        <!----><i class="fab fa-facebook-f mr-1"></i><span>
                                            <%= link_to "Facebook", user_facebook_omniauth_authorize_path %>
                                        </span></button> <button type="button" class="el-button social-login__button google el-button--default el-button--medium">
                                        <!----><i class="fab fa-google mr-1"></i><span>
                                            Google
                                        </span></button> <button type="button" class="el-button social-login__button github el-button--default el-button--medium">
                                        <!----><i class="fab fa-github mr-1"></i><span>
                                            Github
                                        </span></button></ul>
                            </div>
                        </div>
                    </div>
                </div>

                <% end %>

            </div>
        </div>
    </div>
</main>