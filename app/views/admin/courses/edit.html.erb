<% provide(:title, "Edit Course") %>
<div class="pb-2 mb-3 border-bottom">
    <h1 class="h2">Editing Course</h1>
</div>
<%= form_with(model: [:admin, @course]) do |form| %>
<div class="form-group">
    <label for="course_name">Course</label>
    <%= form.text_field (:course_name), class: "form-control", id: "course_name" %>
</div>
<%= form.submit 'Edit', class: "btn btn-primary btn-sm"%>
<% end %>