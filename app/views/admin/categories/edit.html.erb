<% provide(:title, "Edit Category") %>
<div class="pb-2 mb-3 border-bottom">
    <h1 class="h2">Editing Category</h1>
</div>
<%= form_with(model: [:admin, @category]) do |form| %>
<div class="form-group">
    <label for="category_name">Category</label>
    <%= form.text_field (:category_name), class: "form-control", id: "category_name" %>
</div>
<%= form.submit 'Edit', class: "btn btn-primary btn-sm"%>
<% end %>