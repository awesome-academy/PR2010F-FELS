<div class="row jumbotron">
	<div class="create-test container my-4">
		<div class="create-test__content-flex">
			<div class="d-flex test-view">
				<div class="test-view__left">
					<div class="flex">
						<div class="list-heading">
							Question List
						</div>
						<div class="d-flex items-center">
							<div class="d-flex flex-row justify-center text-center items-">
								Countdown
							</div>
						</div>
					</div>
					<hr>
					<div class="d-flex flex-column">
						<div class="d-flex flex-column label-questions justify-center">
							<div class="d-flex">
								
								<div class="flex items-center">
									<div class="border-question">
									</div>
									<div class="text">
										Click on the question for quick view
									</div>
								</div>
							</div>
							<hr>
						</div>
						<div class="d-flex flex-wrap question-list">

							<% @questions.each.with_index(1) do |question, index|%>
							<div class="list-item">
								<a>
									<div class="question-item d-flex items-center justify-center number_question">
										<%= link_to index, course_path(question_id: question.id, question_index: index), method: :get ,data: { confirm: "You sure?" }, remote: true %>
									</div>
								</a>
							</div>
							<% end %>

						</div>
					</div>
				</div>

				<div class="test-view__right content_question_answer container" id="content_question_answer">
					<div class="test-view__exam-detail">
						<div class="d-flex justify-between item-center">
							<div class="question-heading">
								Question 1
							</div>
						</div>
						<div class="my-4">
							<div class="md-contents">
								<p><%= @question.question_name %></p>
							</div>
						</div>
						<hr>
					</div>
					<div class="mt-2">
						<div class="d-flex flex-column question-answers v-answers">
							<div class="title-note">
								This is your answer here:
							</div>
							<div class="radio-group">

								<% @answers.each do |answer| %>
								<div class="form-check">
									<input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
									<label class="form-check-label" for="exampleRadios1">
										<%= answer.answer_content %>
									</label>
								</div>
								<% end %>

							</div>
						</div>
						<div class="d-flex">
							<button>Select</button>
						</div>
					</div>
				</div>



			</div>
		</div>
	</div>
</div>